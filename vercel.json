{
  "buildCommand": "pnpm build",
  "outputDirectory": "dist/client",
  "framework": null,
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/server"
    }
  ],
  "functions": {
    "api/server.js": {
      "runtime": "nodejs20.x",
      "includeFiles": "dist/server/**",
      "memory": 1024,
      "maxDuration": 30
    }
  }
}

